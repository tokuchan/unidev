[user]
	name = sspillane
	email = sspillane@maystreet.com

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = blue reverse
	local = blue
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = magenta
	untracked = cyan

[core]
	pager = less -FRSX
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input
	quotepath = false
	editor = nvim -O

[alias]
	a = add
	aliases = !$HOME/.local/bin/aliases.py
	br = branch -a
	branches = branch -a
	c = commit
	co = checkout
	cp = cherry-pick
	df = diff
	fix = "!f() { $EDITOR $(git diff --name-only); }; f"
	fo = fetch origin
	last = log -l HEAD
	lg = "log --no-merges --max-count=15 --pretty=\"format:%C(dim green) %<(12,trunc)%ar %C(bold magenta)%h%Creset %C(green)%<(24,trunc)%an %C(italic\n#ff8800)%s\" --graph"
	pos = push --set-upstream origin
	p = push --set-upstream
	remotes = remote -v
	rs = restore --staged
	st = status
	stashes = stash list
	sw = switch
	tags = tag
	tree = log --all --graph --decorate --oneline --simplify-by-decoration
	tg = tag
	unstage = reset HEAD --
	regen-aliases = "!for a in $($HOME/dev/config/aliases.py -f simple -D); do fish -c alias g$a='g $a'; done"
	patches = log --oneline patches...master
	gpush = push gerrit patches:refs/for/master
	log-exclude = "!f() { br=$(git branch --show-current); git log \"${br}\" --not $(git for-each-ref --format='%(refname)' refs/heads/ | grep -v \"refs/heads/${br}\") $*; }; f"
	current-branch = "!f() { test -z \"${1}\" && git rev-parse --abbrev-ref HEAD || echo $1; }; f"
	log-br = "!f() { git log --oneline $(git current-branch $1)...local-master; }; f"
	pull-rebase = "!f(){ git switch master && git pull --no-edit && git submodule update --init && git switch patches && git rebase; git status; }; f"

[pull]
	rebase = false

[mergetool "nvim"]
	cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[merge]
	tool = nvim
	ff = true

[mergetool]
	prompt = false
[init]
	defaultBranch = master
[rerere]
	enabled = false
[status]
	submodulesummary = true
[submodule]
	recurse = true
